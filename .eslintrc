{
    "extends": "eslint-config-default",
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "no-undef": "error",
        "no-unused-vars":"error"
    },
    "overrides": [
        {
            "files": [
                "integration_tests/**/*.js",
                "unit_tests/**/*.js"
            ],
            "env": {
                "mocha": true
            }
        }
    ]
}